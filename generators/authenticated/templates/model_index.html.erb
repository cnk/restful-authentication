<h1>Listing <%= model_controller_plural_name.humanize %></h1>

<table>
  <tr>
    <th>Login</th>
    <th>Given name</th>
    <th>Surname</th>
    <th>e-mail</th>
<% if options[:ldap_capable] -%>
    <th><%= server_singular_name.humanize %></th>
<% end -%>
  </tr>
  
<%% for <%= file_name %> in @<%= model_controller_plural_name %> %>
  <tr>
    <td><%%=h <%= file_name %>.login %></td>
    <td><%%=h <%= file_name %>.given_name %></td>
    <td><%%=h <%= file_name %>.surname %></td>
    <td><%%=h <%= file_name %>.email %></td>
<% if options[:ldap_capable] -%>
    <td><%%=h <%= file_name %>.<%= server_singular_name %>.nil? ? '' : <%= file_name %>.<%= server_singular_name %>.name %></td>
<% end -%>
    <td><%%= link_to 'Show', :action => 'show', :id => <%= file_name %> %></td>
    <td><%%= link_to 'Edit', :action => 'edit', :id => <%= file_name %> %></td>
    <td><%%= link_to 'Destroy', <%= file_name %>, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<%% end %>
</table>

<br />

<%%= link_to 'New <%= file_name.humanize %>', :action => 'new' %>
<% if options[:ldap_capable] -%>
<%%= link_to "<%= server_controller_plural_name.humanize %>", <%= server_controller_plural_name %>_path %>
<% end -%>
